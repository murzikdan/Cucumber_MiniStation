<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
               Title="{Loc 'admin-player-actions-window-ert'}"
               MinWidth="550"
               MinHeight="500">
    <BoxContainer Orientation="Vertical" SeparationOverride="8" Margin="8">
        <!-- Основная панель с двумя списками -->
        <BoxContainer Orientation="Horizontal" SeparationOverride="10" HorizontalExpand="True" VerticalExpand="True">
            <!-- Левый список: ожидающие вызовы -->
            <BoxContainer Orientation="Vertical" SeparationOverride="4" HorizontalExpand="True" VerticalExpand="True">
                <Label Text="Ожидающие вызовы" StyleClasses="labelHeading" />
                <ItemList Name="ExpectedList" HorizontalExpand="True" VerticalExpand="True" MinHeight="150" />

                <!-- Кнопки управления для левого списка -->
                <BoxContainer Orientation="Horizontal" SeparationOverride="8" Margin="0,4,0,0">
                    <Button Name="DeleteErtButton" Text="Удалить" HorizontalExpand="True" />
                    <Button Name="RefreshButton" Text="Обновить" HorizontalExpand="True" />
                </BoxContainer>
            </BoxContainer>

            <!-- Правый список: отряды для отправки -->
            <BoxContainer Orientation="Vertical" SeparationOverride="4" HorizontalExpand="True" VerticalExpand="True">
                <Label Text="Отряды для отправки" StyleClasses="labelHeading" />
                <ItemList Name="ResponceList" HorizontalExpand="True" VerticalExpand="True" MinHeight="150" />
            </BoxContainer>
        </BoxContainer>

        <!-- Панель редактирования выбранного вызова -->
        <PanelContainer StyleClasses="panel" Margin="0,8,0,0">
            <BoxContainer Orientation="Vertical" SeparationOverride="6" Margin="8">
                <Label Text="Редактировать выбранный вызов" StyleClasses="labelHeading" />

                <!-- Первая строка параметров -->
                <BoxContainer Orientation="Horizontal" SeparationOverride="8">
                    <BoxContainer Orientation="Vertical" SeparationOverride="2" HorizontalExpand="True">
                        <Label Text="Время прибытия (сек):" />
                        <BoxContainer Orientation="Horizontal" SeparationOverride="4">
                            <LineEdit Name="ArrivalSeconds" HorizontalExpand="True" />
                            <Button Name="SetArrivalButton" Text="✓" ToolTip="Установить" StyleClasses="squareButton" SetWidth="30" />
                        </BoxContainer>
                    </BoxContainer>

                    <BoxContainer Orientation="Vertical" SeparationOverride="2" HorizontalExpand="True">
                        <Label Text="Задержка(сек):" />
                        <BoxContainer Orientation="Horizontal" SeparationOverride="4">
                            <LineEdit Name="CooldownSeconds" HorizontalExpand="True" />
                            <Button Name="SetCooldownButton" Text="✓" ToolTip="Установить" StyleClasses="squareButton" SetWidth="30" />
                        </BoxContainer>
                    </BoxContainer>
                </BoxContainer>

                <!-- Вторая строка параметров -->
                <BoxContainer Orientation="Horizontal" SeparationOverride="8" Margin="0,4,0,0">
                    <BoxContainer Orientation="Vertical" SeparationOverride="2" HorizontalExpand="True">
                        <Label Text="Бюджет очков:" />
                        <BoxContainer Orientation="Horizontal" SeparationOverride="4">
                            <LineEdit Name="PointsEdit" HorizontalExpand="True" />
                            <Button Name="SetPointsButton" Text="✓" ToolTip="Установить" StyleClasses="squareButton" SetWidth="30" />
                        </BoxContainer>
                    </BoxContainer>

                    <BoxContainer Orientation="Vertical" SeparationOverride="2" HorizontalExpand="True">
                        <Label Text="Цель вызова:" />
                        <BoxContainer Orientation="Horizontal" SeparationOverride="4">
                            <LineEdit Name="ReasonEdit" HorizontalExpand="True" />
                            <Button Name="SetReasonButton" Text="✓" ToolTip="Установить" StyleClasses="squareButton" SetWidth="30" />
                        </BoxContainer>
                    </BoxContainer>
                </BoxContainer>
            </BoxContainer>
        </PanelContainer>

        <!-- Панель отправки нового отряда -->
        <PanelContainer StyleClasses="panel" Margin="0,8,0,0">
            <BoxContainer Orientation="Vertical" SeparationOverride="6" Margin="8">
                <Label Text="Отправить новый отряд" StyleClasses="labelHeading" />

                <BoxContainer Orientation="Vertical" SeparationOverride="4">
                    <Label Text="Цель вызова:" />
                    <LineEdit Name="ReasonResponceEdit" HorizontalExpand="True" />
                </BoxContainer>

                <Button Name="ResponceErtButton" Text="Отправить отряд ОБР" HorizontalExpand="True" Margin="0,8,0,0" />
            </BoxContainer>
        </PanelContainer>
    </BoxContainer>
</DefaultWindow>
