
<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc 'ert-computer-window-title'}"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               x:Class="Content.Client._Mini.ERT.UI.ErtComputerShuttleWindow"
               MinSize="300 100"
               SetSize="550 200">

    <BoxContainer Orientation="Vertical"
                  VerticalExpand="True">

        <!-- ACTION BUTTON -->
        <BoxContainer Orientation="Horizontal"
                      HorizontalAlignment="Center"
                      Margin="5">
            <Button Name="StartEvacuationButton"
                    Access="Public"
                    MinWidth="250"
                    Text="{Loc 'ert-computer-evac-title'}"/>
            <Button Name="CancelEvacuationButton"
                    Access="Public"
                    MinWidth="250"
                    Text="{Loc 'ert-computer-evac-cancle-title'}"/>
        </BoxContainer>

    </BoxContainer>
</DefaultWindow>

